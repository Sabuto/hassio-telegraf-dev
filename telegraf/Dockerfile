ARG BUILD_FROM
# hadolint ignore=DL3006
FROM ${BUILD_FROM}

ARG BUILD_ARCH=amd64

ENV LANG C.UTF-8

ARG TELEGRAF_VERSION

RUN \
    apt-get update \
    && apt-get install -y --no-install-recommends \
        iputils-ping=3:20161105-1ubuntu2 \
        libsnmp30=5.7.3+dfsg-1.8ubuntu3.1 \
        snmp=5.7.3+dfsg-1.8ubuntu3.1 \
        procps=2:3.3.12-3ubuntu1.1 \
        lm-sensors=1:3.4.0-4 \
        smartmontools=6.5+svn4324-1 \
        ipmitool=1.8.18-5build1 \
    && ARCH="${BUILD_ARCH}" \
    && if [ "${BUILD_ARCH}" = "aarch64" ]; then ARCH="arm64"; fi \
    && if [ "${BUILD_ARCH}" = "armv7" ]; then ARCH="armhf"; fi \
    \
    && TELEGRAF="$TELEGRAF_VERSION" \
    && curl -J -L -o /tmp/telegraf.deb \
        "https://dl.influxdata.com/telegraf/releases/telegraf_${TELEGRAF}-1_${ARCH}.deb" \
    && dpkg --install /tmp/telegraf.deb \
    && apt-get clean \
    && rm -rf \
        /tmp/* \
        /var/lib/apt/lists/*

EXPOSE 8092/udp 8094 8125/udp

COPY run.sh /
RUN chmod a+x /run.sh
COPY telegraf.conf /etc/telegraf/
RUN chmod a+x /etc/telegraf/telegraf.conf

CMD [ "/run.sh" ]
